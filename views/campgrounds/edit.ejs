<%- include("../partials/header") %>


<div class="container">
    <h1 class="mb-5 text-center pb-4">Edit Campground</h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div style="width: 36%; margin: 0 auto;">
        <div class="form-group">
            <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.00" step="0.01">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
        </div>
        <div class="form-group">
            <textarea class="form-control" name="campground[description]" cols="30" rows="10"><%= campground.description %></textarea>
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">Update</button>
        </div>
        <a href="/campgrounds">Go back</a>
    </div>
    </form>
    
    
</div>


<%- include("../partials/footer") %>