<%- include("../partials/header") %>


<div class="container">
    <header class="jumbotron">
        <div class="container text-center p-2">
        <h1 class="display-3">Welcome to YelpCamp!</h1>
        <p class="lead"><strong>View the best campgrounds around the world!</strong></p>
        <p>
            <a class="btn btn-primary btn-md" href="/campgrounds/new">Add a new campground</a>
        </p>
    </div>
    </header>
    
    <div class="row">
        <h3 class="m-4">Popular Campgrounds</h3>
    </div>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card mb-4">
                    <img class="card-img-top" src="<%= camp.image %>">
                    <div class="card-body">
                        <h5 class="card-text"><%= camp.name %></h5>
                    </div>
                    <p><a class="btn btn-primary btn-sm" href="/campgrounds/<%= camp._id %>">View</a></p>
                </div>
            </div>
        <% }) %>

    </div>
    
</div>


<%- include("../partials/footer") %>