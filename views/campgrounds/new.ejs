<%- include("../partials/header") %>


<div class="container">
    <h1 class="mb-5 text-center pb-4">Create a New Campground</h1>
    <form action="/campgrounds" method="POST">
    <div style="width: 36%; margin: 0 auto;">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Name" name="name">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" placeholder="Price per night" name="price" min="0.00" step="0.01">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Image URL" name="image">
        </div>
        <div class="form-group">
            <textarea class="form-control" rows="10" cols="30" placeholder="Add description" name="description"></textarea>
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block">Add</button>
        </div>
        <a href="/campgrounds">Go back</a>
    </div>
    </form>
    
    
</div>


<%- include("../partials/footer") %>